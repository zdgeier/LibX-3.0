{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "amd": true,
    "node": true,
    "webextensions": true
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": 0
  },

  "extends": ["eslint:recommended", "plugin:react/recommended"]
}
